    @Test(timeout=10000)
    public void notifyConfigInfo() throws Exception {
        MockMvcBuilders.standaloneSetup(controller).build().perform(
            MockMvcRequestBuilders.get("/v1/cs/communication/dataChange", new Object[] { })
                .param("dataId", "something")
                .param("group", "bar")
                .param("tenant", "isBeta")
                .param("tag", "foo"))
            .andExpect(status().isOk())
            .andExpect(content().contentType("application/json;charset=UTF-8"))
            .andExpect(content().string("true"));
