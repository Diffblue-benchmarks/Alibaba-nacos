<!-- set debug to 'true' to see debug messages from the logging library itself
     -->
<configuration debug="false">

  <conversionRule conversionWord="truncatedMsg" converterClass="com.diffblue.cover.logging.LongMessageConverter"/>
  <conversionRule conversionWord="lessTruncatedMsg" converterClass="com.diffblue.cover.logging.LongerMessageConverter"/>

  <appender name="console-debug-minimal"
    class="com.diffblue.cover.logging.ProgressBarAppender">
    <target>System.out</target>

    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %magenta(%level) %truncatedMsg%n</pattern>
    </encoder>

    <!-- set level="DEBUG" or "TRACE" or "INFO" to enable more verbose output -->
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>INFO</level>
    </filter>
  </appender>

  <timestamp key="fileTimestamp" datePattern="yyyyMMdd'T'HHmmss"/>

  <appender name="file-logger" class="com.diffblue.cover.logging.NoProgressBarFileAppender">
    <file>.diffblue/log/cover-cli-${fileTimestamp}.log</file>
    <append>true</append>
    <immediateFlush>true</immediateFlush>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%level][%thread][%logger{16}] %lessTruncatedMsg%n</pattern>
    </encoder>

    <!-- set level="DEBUG" or "TRACE" or "INFO" to enable more verbose output -->
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>DEBUG</level>
    </filter>
  </appender>

  <!-- set level="DEBUG" or "TRACE" or "INFO" to enable more verbose output -->
  <logger name="com.diffblue" additivity="false" level="TRACE">
    <appender-ref ref="console-debug-minimal"/>
    <appender-ref ref="file-logger"/>
  </logger>

  <!-- disable all logging that does not come from Diffblue code -->
  <root level="OFF"/>
</configuration>
